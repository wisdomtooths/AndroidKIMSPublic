<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


       <RelativeLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/tv_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
               android:text="Reports Date"
               android:textColor="@color/black"
               android:textSize="18dp"
               android:textStyle="bold" />
           <com.google.android.material.card.MaterialCardView
               android:layout_below="@id/tv_date"
               android:id="@+id/lay_date"
               android:layout_width="match_parent"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_marginTop="16dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="20dp"
               android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_toDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_calander_a"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text="28-Jan-2022"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="#E91E63" />

                    <LinearLayout
                        android:id="@+id/lay_to_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_fromDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_calander_a"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text="28-Jan-2022"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
           </com.google.android.material.card.MaterialCardView>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_reportList"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_above="@id/lay_bottom"
               android:layout_below="@id/lay_date"
               android:layout_marginBottom="10dp"
               tools:listitem="@layout/item_report_list" />

           <LinearLayout
               android:id="@+id/lay_bottom"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_marginBottom="60dp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:text="Refer Note"
                   android:textColor="@color/black"
                   android:textSize="18dp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/tv_mail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:paddingBottom="5dp"
                   android:text="For Reports befor 2019,Please Sent Mail to \n kimsinfoLoc2@KIMS.com "
                   android:textColor="@color/black" />
           </LinearLayout>

       </RelativeLayout>
</layout>