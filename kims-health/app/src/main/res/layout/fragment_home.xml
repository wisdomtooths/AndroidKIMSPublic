<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/backgroundMain"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorMain"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="66dp"
                    android:padding="10dp"
                    android:layout_height="66dp"
                    android:src="@drawable/pic" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Welcome" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Philip Murphy" />
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:columnCount="3"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_book_appointment"
                    android:layout_width="110dp"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="5dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:backgroundTint="@color/colorMain"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_calander" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Book an Appointment"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_reports"
                    android:layout_width="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    android:elevation="10dp"
                    android:backgroundTint="@color/colorMain"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_my_reports"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="My \nReports"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/findadoctor"
                    android:layout_width="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    android:elevation="10dp"
                    android:backgroundTint="@color/colorMain"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_find_doctor"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="Find a \nDoctor"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    android:visibility="gone"
                    android:elevation="10dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_group"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:text="\nCheck In"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="30dp"
                    android:visibility="gone"
                    app:cardElevation="5dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_height="fill_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_book_lab_test"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:text="Book \nLab Test"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:visibility="gone"
                    app:cardElevation="5dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_video_consulting"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:text="Video \nConsulting"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Appointment Schedule"
                android:layout_height="wrap_content" />

<!--    <include layout="@layout/item_appointment_schedule" />-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                tools:listitem="@layout/item_appointment_schedule"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="My Health"
                android:layout_height="wrap_content" />

            <include
                android:visibility="gone"
                layout="@layout/item_myhealth" />

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Packages/ Offers"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
android:visibility="gone"
                android:background="@drawable/banner2"
                android:layout_gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
</layout>