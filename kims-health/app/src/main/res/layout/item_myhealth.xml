<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/pic" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="Philip Murphy"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/doctor_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/doctor_name"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="-24dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="55Year Old"
                android:textSize="12dp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:textSize="14dp"
            android:text="Hi Philip, Your body's health is in a bad \ncondition,Try to rest and consume nutritious \nfood"
            android:layout_height="wrap_content"/>

       <GridLayout
           android:layout_width="wrap_content"
           android:columnCount="2"
           android:layout_gravity="center"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_margin="10dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="150dp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_gravity="right"
                       android:layout_marginTop="5dp"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_blood_pressure" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/colorMain"
                       android:textStyle="bold"
                       android:text="150 / 80" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:textSize="10dp"
                       android:layout_marginBottom="10dp"
                       android:text="Blood Pressure" />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_margin="10dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="150dp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_gravity="right"
                       android:layout_marginTop="5dp"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_heart_rate" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/colorMain"
                       android:textStyle="bold"
                       android:text="56" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:textSize="10dp"
                       android:layout_marginBottom="10dp"
                       android:text="Heart Rate" />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_margin="10dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="150dp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_gravity="right"
                       android:layout_marginTop="5dp"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_temperature" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/colorMain"
                       android:textStyle="bold"
                       android:text="39 \u2103" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:textSize="10dp"
                       android:layout_marginBottom="10dp"
                       android:text="Temperature" />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_margin="10dp"
               android:elevation="10dp"
               app:cardCornerRadius="10dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="150dp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_gravity="right"
                       android:layout_marginTop="5dp"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_weight" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/colorMain"
                       android:textStyle="bold"
                       android:text="85" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:textSize="10dp"
                       android:layout_marginBottom="10dp"
                       android:text="Weight" />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </GridLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>