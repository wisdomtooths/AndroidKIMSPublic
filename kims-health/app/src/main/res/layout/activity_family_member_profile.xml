<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="match_parent" android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".ui.activity.BookAppointmentDrProfile">

                    <RelativeLayout
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/icon_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:visibility="gone"


                            android:src="@drawable/ic_arrow_left" />

                        <TextView
                            android:id="@+id/title_member_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Member Name"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/toolbar"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/member_image"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_centerVertical="true"
                                        android:padding="10dp"
                                        android:src="@drawable/pic" />

                                    <LinearLayout
                                        android:layout_width="287dp"
                                        android:layout_height="match_parent"
                                        android:layout_toRightOf="@id/member_image"
                                        android:orientation="vertical"
                                        android:padding="10dp">

                                        <TextView
                                            android:id="@+id/profile_member_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:text="Venkat, 24 yrs"
                                            android:textColor="@color/black"
                                            android:textSize="18dp"
                                            />

                                        <TextView
                                            android:id="@+id/profile_member_contact"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:text="+968 9876543210"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/profile_tv_desig"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:drawableLeft="@drawable/ic_user"
                                            android:drawablePadding="10dp"
                                            android:lineSpacingExtra="2dp"
                                            android:text="Father"
                                            android:visibility="gone"
                                            android:textSize="14dp" />


                                        <TextView
                                            android:id="@+id/blood_grp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:paddingTop="5dp"
                                            android:drawableLeft="@drawable/ic_blood_drop_1"
                                            android:drawablePadding="10dp"
                                            android:text="O+"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:paddingTop="5dp"
                                            android:drawableLeft="@drawable/ic_location_on"
                                            android:drawablePadding="10dp"
                                            android:text="KIMS,Oman"
                                            android:textSize="14dp" />


                                    </LinearLayout>
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@android:color/black" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#EAE8E8">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_margin="10dp">

                                        <TextView
                                            android:id="@+id/member_mrno"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="MRNO: 87423429:"
                                            android:textColor="@color/black"
                                            android:textSize="14dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_margin="10dp">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Hospital: +968 24 760100"
                                            android:textColor="@color/black"
                                            android:textSize="14dp" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Immunization"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:visibility="gone"
                            android:padding="15dp"
                            android:text="Problem List"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_member_profile_reports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Reports"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tv_member_appoinment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Appointments"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Insurance"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_member_profile_allergy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Allergy Information"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Pharmacy"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/white"
                            android:visibility="gone"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Payments"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:backgroundTint="@color/white"
                            android:drawableRight="@drawable/ic_chevron"
                            android:gravity="left"
                            android:padding="15dp"
                            android:text="Request Payment"
                            android:textColor="@color/black"
                            app:cornerRadius="10dp" />


                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>


        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>